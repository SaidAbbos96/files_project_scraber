# ========================================
# FILES PROJECT SCRAPER - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and configure your settings
# cp .env.example .env

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_LOCAL_NAME=local_files
DB_PATH=local_db/local_files.db

# ========================================
# DIRECTORIES
# ========================================
DOWNLOAD_DIR=downloads
RESULTS_DIR=results
FINISH_DIR=finish

# ========================================
# LOGGING SETTINGS
# ========================================
LOGGING_ENABLED=1

# ========================================
# FILE PROCESSING SETTINGS
# ========================================
FILE_MIN_SIZE=1048576  # 1MB in bytes (1024 * 1024)

# ========================================
# CONCURRENCY SETTINGS - Performance tuning
# ========================================
SCRAPE_CONCURRENCY=5    # Scraping parallel workers (1-10)
DOWNLOAD_CONCURRENCY=2  # Download parallel workers (1-5)
DOWNLOAD_BASE_TIMEOUT=1800  # Base timeout in seconds (30 minutes)
DOWNLOAD_MAX_RETRIES=3      # Maximum retry attempts for failed downloads
DOWNLOAD_CHUNK_SIZE=262144  # Chunk size in bytes (256KB)
UPLOAD_CONCURRENCY=2    # Upload parallel workers (1-3)
UPLOAD_WORKERS=2        # Upload consumer workers (1-5)

# ========================================
# TIMING SETTINGS - Request delays
# ========================================
SLEEP_MIN=0.5           # Minimum sleep between requests (0.1-2.0)
SLEEP_MAX=2.5           # Maximum sleep between requests (1.0-5.0)
ENABLE_SLEEP=true       # Enable/disable sleep between requests

# ========================================
# PROCESSING MODES - Workflow settings
# ========================================
CHECKPOINT_BATCH=100                # Batch size for checkpoints (50-500)
CLEAR_UPLOADED_FILES=true          # Clean files after upload (true/false)
NOTIFICATION_QUIET_MODE=false      # Reduce notification spam (true/false)
NOTIFICATION_RATE_LIMIT=1.0        # Min seconds between notifications (0.5-10.0)

# ========================================
# DISK MONITORING - Storage management
# ========================================
DISK_MONITOR_ENABLED=true          # Enable disk space monitoring
MIN_FREE_SPACE_GB=1.0              # Minimum free space (0.5-10.0 GB)
DISK_CHECK_INTERVAL=60             # Check interval in seconds (30-300)
MAX_WAIT_FOR_SPACE_MINUTES=30      # Max wait for disk space (10-60 min)
CLEANUP_OLD_FILES=true             # Auto cleanup old files
FILE_MAX_AGE_HOURS=1               # Max age for files in hours (0.5-24)

# ========================================
# WORK MODE SETTINGS - Operation modes
# ========================================
WORK_MODE=                         # 1=scrape, 2=download, 3=download+upload
MODE=parallel                      # parallel/sequential
DEBUG=false                        # Debug mode (true/false)
SORT_BY_SIZE=false                 # Start with smallest files (true/false)

# ========================================
# STREAMING & UPLOAD SETTINGS
# ========================================
USE_STREAMING_UPLOAD=false         # Stream upload without disk save
KEEP_FILES_ON_DISK=false          # Keep files after upload
SEND_STARTUP_NOTIFICATIONS=true   # Send startup messages

# ========================================
# TELEGRAM CONFIGURATION - REQUIRED
# ========================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=YOUR_API_ID
TELEGRAM_API_HASH=YOUR_API_HASH
TELEGRAM_PHONE_NUMBER=+998901234567

# Telegram Groups/Channels
FILES_GROUP_ID=-1001234567890
FILES_GROUP_LINK=https://t.me/your_group_link
TELEGRAM_GROUP=                    # Override default group (optional)

# ========================================
# COMMON CONFIGURATION EXAMPLES
# ========================================

# FILE_MIN_SIZE examples:
# FILE_MIN_SIZE=524288     # 512KB - for small files
# FILE_MIN_SIZE=2097152    # 2MB - standard setting
# FILE_MIN_SIZE=5242880    # 5MB - for larger files only
# FILE_MIN_SIZE=10485760   # 10MB - for very large files

# PERFORMANCE examples:
# High Performance Setup:
# SCRAPE_CONCURRENCY=10
# DOWNLOAD_CONCURRENCY=5
# UPLOAD_CONCURRENCY=3
# SLEEP_MIN=0.1
# SLEEP_MAX=1.0

# Safe/Conservative Setup:
# SCRAPE_CONCURRENCY=3
# DOWNLOAD_CONCURRENCY=1
# UPLOAD_CONCURRENCY=1
# SLEEP_MIN=1.0
# SLEEP_MAX=3.0

# Disk Space Management:
# Small Disk (< 10GB free):
# MIN_FREE_SPACE_GB=2.0
# FILE_MAX_AGE_HOURS=0.5
# CLEANUP_OLD_FILES=true

# Large Disk (> 100GB free):
# MIN_FREE_SPACE_GB=5.0
# FILE_MAX_AGE_HOURS=24
# CLEANUP_OLD_FILES=false
